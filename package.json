{
  "name": "antigravity-cleaner",
  "version": "1.0.0",
  "description": "Antigravity Cache Cleaner and System Tool",
  "main": "out/main/index.js",
  "build": {
    "appId": "com.antigravity.cleaner",
    "productName": "Antigravity Cleaner",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.png",
      "category": "Utility"
    }
  },
  "scripts": {
    "dev": "electron-vite dev",
    "build": "tsc && electron-vite build",
    "build:win": "npm run build && electron-builder --win -p never",
    "build:mac": "npm run build && electron-builder --mac -p never",
    "build:linux": "npm run build && electron-builder --linux -p never",
    "preview": "electron-vite preview"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "clsx": "^2.0.0",
    "framer-motion": "^10.16.4",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/archiver": "^7.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^2.0.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}